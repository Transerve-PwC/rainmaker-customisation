{
    "key": "est-ot-lease-deed-system-letter",
    "config": {
        "defaultStyle": {
            "font": "Cambay"
        },
        "content": [
            {
                "style": "noc-head",
                "table": {
                  "widths": [
                   50, "*"
                  ],
                  "body": [
                    [
                     {
                       "image": "{{logo}}",
                       "width": 50,
                       "margin": [8, 10, 10, 0]
                     },
                     {
                       "stack": [
                         {
                           "text": "{{header}}",
                           "style": "receipt-logo-header"
                         },
                         {
                           "text":"{{colony_branch}}",
                           "style":"receipt-logo-sub-header"
                         },
                         {
                            "text": "New Deluxe Building, Sector 17-E, Chandigarh",
                            "style":"receipt-logo-sub-header"
                        }
                       ],
                       "alignment": "center",
                         "margin": [
                           0,
                           12,
                           0,
                           0
                         ]
                     }
                    ]
                  ]
                },
                "layout": "noBorders"
            },
            {
                "style": "pt-reciept-citizen-header",
                "columns": [
                  {
                    "width":"auto",
                    "text": [
                      {
                        "text": "No. MC/Estate/2020/",
                        "bold": true
                      },
                      {
                        "text": "{{applicationNumber}}",
                        "bold": false
                      }
                    ],
                    "alignment": "left"
                  },
                  {
                    "text": ""
                  },
                  {
                    "width":"auto",
                    "text": [
                      {
                        "text": "Dated ",
                        "bold": true
                      },
                      {
                        "text": "{{dateOfAllotment}}",
                        "bold": false
                      }
                    ],
                    "alignment": "right"
                  }
                ]
            },
            {
                "margin": [0, 20, 0, 0],
                "text": "To",
                "alignment": "left",
                "style": "pdfContent"
            },
            {
                "margin": [0, 10, 0, 0],
                "stack": [{
                        "preserveLeadingSpaces": true,
                        "text": "             {{name}} ",
                        "style": "pdfContent",
                        "width": "*"
                    },
                    {
                        "preserveLeadingSpaces": true,
                        "text": "             {{address}} ",
                        "style": "pdfContent",
                        "width": "*"
                    }

                ]
            },
            {
                "margin": [0, 10, 0, 0],
                "columns": [{
                        "text": "Sub:-",
                        "style": "pdfContent",
                        "bold": true,
                        "width": "auto",
                        "alignment": "left"

                    },
                    {
                        "margin": [10, 0, 0, 0],
                        "width": "*",
                        "text": [{
                                "text": "Submission of Conveyance deed booth SCF/SCO/Residential Site No. "
                            }, {
                                "text": "{{siteNumber}}","bold":true
                            },
                            {
                                "text": " Manimajra, UT, Chandigarh"
                            }
                        ],
                        "style": "pdfContent",
                        "bold": true
                    }
                ]
            },
            {
                "margin": [0, 20, 0, 0],
                "style": "pdfContent",
                "preserveLeadingSpaces": true,
                "text": "             Enclosed please find herewith original deed with copy of thereof duly executed on {{createdTime}}. You are directed to get it Registered with Sub-Registrar, U.T Chandigarh  and submit the attested/notarized copy of same with this office for record"
            },
            {
                "style": "pdfContent",
                "margin": [0, 20, 0, 0],
                "columns": [{
                        "text": "DA/As above",
                        "alignment": "left"
                    },
                    {
                        "alignment": "right",
                        "stack": [{
                                "text": "Section Officer",
                                "style": "pdfContent",
                                "bold": true
                            },
                            {
                                "text": "For Additional Commissioner",
                                "style": "pdfContent",
                                "bold": true

                            },
                            {
                                "text": "Municipal Corporation,",
                                "style": "pdfContent",
                                "bold": true

                            },
                            {
                                "text": "Chandigarh.",
                                "style": "pdfContent",
                                "bold": true

                            }

                        ]
                    }
                ]
            }


        ],
        "styles": {
            "pdfContent": {        
                "color": "#000000",
                "bold": false,
                "fontSize": 11,
                "fontWeight": 400,
                "margin": [
                  3,
                  0,
                  0,
                  0
                ]
            },
            "pt-reciept-citizen-header": {
                "fontSize": 12,
                "bold": true,
                "margin": [
                  0,
                  8,
                  0,
                  0
                ],
                "color": "#484848"
              },
            "receipt-logo-header": {
                "color": "#484848",
                "fontSize": 14,
                "bold": true,
                "letterSpacing": 0.74,
                "margin": [
                  0,
                  0,
                  0,
                  5
                ]
              },
              "receipt-logo-sub-header": {
                "color": "#484848",
                "fontFamily": "Roboto",
                "fontSize": 13,
                "letterSpacing": 1.6,
                "margin": [
                  0,
                  6,
                  0,
                  0
                ]
              },
              "noc-head": {
                "margin": [
                  -25,
                  -25,
                  0,
                  1
                ]
              }

        }
    }
}