{
    "key": "rp-duplicate-copy-allotment-letter",
    "config": {
        "defaultStyle": {
            "font": "Cambay"
        },
        "content": [{
                "columns": [{
                        "image": "{{logo}}",
                        "width": 40,
                        "alignment": "left"
                    },
                    {

                        "alignment": "center",
                        "stack": [{
                                "text": "{{header}}",
                                "color": "#17202A",
                                "fontSize": 12,
                                "bold": true
                            },
                            {
                                "text": "{{colony_branch}}",
                                "color": "#17202A",
                                "fontSize": 12,
                                "bold": true,
                                "lineHeight": "2"
                            }
                        ]
                    }

                ]

            },
            {
                "text": "To",
                "alignment": "left",
                "style": "pdfContent"
            },
            {
                "margin": [50, 10, 0, 0],
                "stack": [{
                        "text": "{{name}}",
                        "style": "pdfContent",
                        "width": "*"
                    },
                    {
                        "text": "{{colony}}",
                        "style": "pdfContent",
                        "width": "*"
                    },
                    {
                        "text": "{{area}} ,{{pincode}}",
                        "style": "pdfContent",
                        "width": "*"
                    },
                    {
                        "text": "Memo No {{memoNumber}}",
                        "style": "pdfContent",
                        "width": "*"
                    },
                    {
                        "text": "Dated ________________________",
                        "style": "pdfContent",
                        "width": "*"
                    }

                ]
            },
            {
                "margin":[0,10,0,0],
                "columns":[
                    {
                        "text":"Subject:",
                        "style":"pdfContent",
                        "bold":true,
                        "width":"auto",
                        "alignment":"left"

                    },
                    {
                        "margin": [20, 0, 0, 0],
                        "width":"*",    
                        "text":"Supply of duplicate copy of Allotment letter of Transit Site No {{transitNumber}}, {{colony}}, {{area}}, issued by the Estate Office/Municipal Corporation,Chandigarh.",
                        "style":"pdfContent",
                        "bold":true     
                    }
                ]
            },
            {
                "margin":[50,20,0,0],
                "style":"pdfContent",
                "text":"Reference your application/request dated {{creationDate}} on the subject cited above."
            },
            {
                "margin":[50,20,0,0],
                "style":"pdfContent",
                "text":"The duplicate Allotment Letter No.{{allotmentNumber}} Dated {{allotmentDate}} in respect of Transit Site No.{{transitNumber}}, {{colony}}, {{area}} allotted to Sh./Smt. {{name}} is hereby attached, duly attested."
            },
            {
                "margin":[0,20,0,0],
                "alignment":"right",
                "stack":[ {
                    "text":"Superintendent(C),",
                    "style":"pdfContent"
                },
                {
                    "text":"Municipal Corporation,",
                    "style":"pdfContent"
                },
                {
                    "text":"Chandigarh.",
                    "style":"pdfContent"
                }

            ]
            }


        ],
        "styles": {
            "pdfContent": {
                "fontSize": 8
            },
            "tl-head": {
                "fillColor": "#F2F2F2",
                "margin": [
                    -41,
                    -41,
                    -41,
                    0
                ]
            },
            "pt-reciept-citizen-header": {
                "fontSize": 12,
                "bold": true,
                "margin": [
                    0,
                    8,
                    0,
                    0
                ],
                "color": "#484848"
            },
            "pt-reciept-citizen-subheader": {
                "fontSize": 10,
                "bold": true,
                "margin": [
                    0,
                    16,
                    0,
                    8
                ],
                "color": "#484848"
            },
            "pt-reciept-citizen-table": {
                "fontSize": 10,
                "color": "#484848"
            },
            "receipt-assess-table": {
                "fontSize": 10,
                "color": "#484848",
                "margin": [
                    0,
                    8,
                    0,
                    0
                ]
            },
            "receipt-assess-table-header": {
                "bold": true,
                "fillColor": "#D8D8D8",
                "color": "#484848"
            },
            "receipt-header-details": {
                "fontSize": 9,
                "margin": [
                    0,
                    0,
                    0,
                    8
                ],
                "color": "#484848"
            },
            "receipt-table-key": {
                "color": "#484848",
                "bold": true
            },
            "receipt-table-value": {
                "color": "#484848"
            },
            "receipt-logo-header": {
                "color": "#484848",
                "fontFamily": "Roboto",
                "fontSize": 16,
                "bold": true,
                "letterSpacing": 0.74
            },
            "receipt-logo-sub-header": {
                "color": "#484848",
                "fontFamily": "Roboto",
                "fontSize": 13,
                "letterSpacing": 1.6,
                "margin": [
                    0,
                    6,
                    0,
                    0
                ]
            },
            "receipt-footer": {
                "color": "#484848",
                "fontSize": 8
            },
            "receipt-no": {
                "color": "#484848",
                "fontSize": 10
            },
            "receipt-approver": {
                "fontSize": 10,
                "bold": true,
                "margin": [
                    0,
                    60,
                    0,
                    8
                ],
                "color": "#484848"
            }
        }
    }
}