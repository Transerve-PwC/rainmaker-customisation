{
    "key": "rp-dc-allotment-letter",
    "config": {
        "defaultStyle": {
            "font": "Cambay"
        },
      
        "content": [
            {
                "style": "noc-head",
                "table": {
                  "widths": [
                   50, "*"
                  ],
                  "body": [
                    [
                     {
                       "image": "{{logo}}",
                       "width": 50,
                       "margin": [8, 10, 10, 0]
                     },
                     {
                       "stack": [
                         {
                           "text": "{{header}}",
                           "style": "receipt-logo-header"
                         },
                         {
                           "text": "{{colony_branch}}",
                           "style": "receipt-logo-sub-header"
                         }
                       ],
                       "alignment": "center",
                         "margin": [
                           0,
                           12,
                           0,
                           0
                         ]
                     }
                    ]
                  ]
                },
                "layout": "noBorders"
              },
            {
                "margin": [0, 20, 0, 0],
                "text": "To",
                "alignment": "left",
                "style": "pdfContent"
            },
            {
                "margin": [50, 10, 0, 0],
                "stack": [{
                        "text": "{{name}}",
                        "style": "pdfContent",
                        "width": "*"
                    },
                    {
                        "text": "{{colony}}",
                        "style": "pdfContent",
                        "width": "*"
                    },
                    {
                        "text": "{{area}} ,{{pincode}}",
                        "style": "pdfContent",
                        "width": "*"
                    },
                    {
                        "text": "Memo no/Allotment number {{allotmentNumber}}",
                        "style": "pdfContent",
                        "width": "*"
                    },
                    {
                        "text": "Dated {{allotmentDate}}",
                        "style": "pdfContent",
                        "width": "*"
                    }

                ]
            },
            {
                "margin": [0, 10, 0, 0],
                "columns": [{
                        "text": "Subject:",
                        "style": "pdfContent",
                        "bold": true,
                        "width": "auto",
                        "alignment": "left"

                    },
                    {
                        "margin": [10, 0, 0, 0],
                        "width": "*",
                        "text": "Supply of duplicate copy of Allotment letter of Transit Site No {{transitNumber}}, {{colony}}, {{area}}, issued by the Estate Office/Municipal Corporation,Chandigarh.",
                        "style": "pdfContent",
                        "bold": true
                    }
                ]
            },
            {
                "margin": [50, 20, 0, 0],
                "style": "pdfContent",
                "text": "Reference your application/request dated {{creationDate}} on the subject cited above."
            },
            {
                "margin": [50, 20, 0, 0],
                "style": "pdfContent",
                "text": [
                    {
                        "text":"The duplicate Allotment Letter No."
                    },
                    {
                    "text":"{{allotmentNumber}} " ,
                        "bold":true
                    },
                    {
                        "text":"Dated {{allotmentDate}} in respect of Transit Site No. "
                    },
                    {
                        "text":"{{transitNumber}}, {{colony}}, {{area}} ."
                        ,
                        "bold":true
                    },
                    {
                        "text":"allotted to Sh./Smt."
                    },
                    {
                        "text":" {{name}}",
                        "bold":true
                    },
                    {
                        "text":" is hereby attached, duly attested."
                    }
                    
            ]
            },
            {
                "margin": [0, 20, 0, 0],
                "alignment": "right",
                "stack": [{
                        "text": "Superintendent(C),",
                        "style": "pdfContent"
                    },
                    {
                        "text": "Municipal Corporation,",
                        "style": "pdfContent"
                    },
                    {
                        "text": "Chandigarh.",
                        "style": "pdfContent"
                    }

                ]
            }


        ],
        "styles": {
            "pdfContent": {
                "color": "#000000",
                "bold": false,
                "fontSize": 11,
                "fontWeight": 400,
                "margin": [
                  3,
                  0,
                  0,
                  0
                ]
            },
            "receipt-logo-header": {
                "color": "#484848",
                "fontSize": 14,
                "bold": true,
                "letterSpacing": 0.74,
                "margin": [
                  0,
                  0,
                  0,
                  5
                ]
              },
              "receipt-logo-sub-header": {
                "color": "#484848",
                "fontFamily": "Roboto",
                "fontSize": 13,
                "letterSpacing": 1.6,
                "margin": [
                  0,
                  6,
                  0,
                  0
                ]
              },
              "noc-head": {
                "margin": [
                  -25,
                  -25,
                  0,
                  1
                ]
              }

        }
    }
} 