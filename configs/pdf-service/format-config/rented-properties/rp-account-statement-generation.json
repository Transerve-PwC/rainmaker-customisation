{
    "key": "rp-account-statement-generation",
    "config": {
        "defaultStyle": {
            "font": "Cambay"
        },
        "content": [
            {
                "columns":[
                    {
                        "image": "{{logo}}",
                        "width": 50,
                        "alignment": "left",
                        "margin": [8, 10, 10, 0]
                    },
                    {
                        "stack": [
                            {
                                "text": "{{header}}. {{transitNumber}}, ",
                                "alignment": "center",
                                "style":"receipt-logo-header"
                               
                            },
                            {
                                "text": "{{colony}}",
                                "alignment": "center",
                                "style":"receipt-logo-header"
                            }
                        ]
        
                    }

                ]
            },
           
            {
                "margin": [0, 20, 0, 0],
                "table": {
                    "widths": ["50%", "50%"],
                    "alignment":"center",
                    "body": [
                        [{
                            "text": "Name",
                            "style": "table-header"
                        }, {
                            "text": "{{name}}",
                            "style": "table-content"
                        }],
                        [{
                            "text": "Date of Allotment As Per Lease Deed",
                            "style": "table-header"
                        }, {
                            "text": "{{date}}",
                            "style": "table-content"
                        }],
                        [{
                            "text": "Transit Site No",
                            "style": "table-header"
                        }, {
                            "text": "{{transitNumber}}",
                            "style": "table-content"
                        }],
                        [{
                            "text": "Area",
                            "style": "table-header"
                        }, {
                            "text": "{{area}} sq.yd",
                            "style": "table-content"
                        }],
                        [{
                            "text": "Rent ",
                            "style": "table-header"
                        }, {
                            "text": "",
                            "style": "table-content"
                        }],
                        [{
                            "text": "Security Advance Taken By o/o BDPO U.T.Interest",
                            "style": "table-header"
                        }, {
                            "text": "",
                            "style": "table-content"
                        }],
                        [{
                            "text": "Yr. Rent (increase as per Clause 4 of Lease Deed)",
                            "style": "table-header"
                        }, {
                            "text": "{{rentIncrementPercentage}}%",
                            "style": "table-content"
                        }],
                     
                        [{
                            "text": "Monthly Rent",
                            "style": "table-header"
                        }, {
                            "text": "{{monthlyRent}}",
                            "style": "table-content"
                        }],
                        [{
                            "text": "Interest",
                            "style": "table-header"
                        }, {
                            "text": "{{interestRate}}% P.A as per clause 15 of Lease Deed",
                            "style": "table-content"
                        }]
                    ]
                }


            },
            {
                "margin":[0,20,0,0],
                "table":{
                    "widths":["11.11%","11.11%","11.11%","11.11%","11.11%","11.11%","11.11%","11.11%","11.11%"],
                    "body":[
                        [
                            {
                            "text":"{{COMMON_TABLE_COL_DATE}}",
                            "style":"table-header",
                            "border":[
                                true,
                                true,
                                true,
                                false
                              ]
                        },
                        {
                            "text":"{{COMMON_TABLE_COL_AS_AMOUNT}} (in Rs)",
                            "style":"table-header",
                            "border":[
                                true,
                                true,
                                true,
                                false
                              ]
                        },  
                        {
                            "text":"{{COMMON_TABLE_COL_AS_TYPE}}(payment)",
                            "style":"table-header",
                            "border":[
                                true,
                                true,
                                true,
                                false
                              ]
                        },
                         {
                            "text":"{{COMMON_TABLE_COL_AS_TYPE}}(Rent)",
                            "style":"table-header",
                            "border":[
                                true,
                                true,
                                true,
                                false
                              ]
                        },  
                           {
                            "text":"{{COMMON_TABLE_COL_AS_REMAINING_PRINCIPAL}}",
                            "style":"table-header",
                            "border":[
                                true,
                                true,
                                true,
                                false
                              ]
                        }, 
                        {
                            "text":"{{COMMON_TABLE_COL_AS_REMAINING_INTEREST}}",
                            "style":"table-header",
                            "border":[
                                true,
                                true,
                                true,
                                false
                              ]
                        },  {
                            "text":"{{COMMON_TABLE_COL_AS_TOTAL_DUE}}",
                            "style":"table-header",
                            "border":[
                                true,
                                true,
                                true,
                                false
                              ]
                        },   
                        {
                            "text":"{{COMMON_TABLE_ACCOUNT_BALANCE}}",
                            "style":"table-header",
                            "border":[
                                true,
                                true,
                                true,
                                false
                              ]
                        },
                    
                        {
                            "text":"{{RECEIPT_NO}}",
                            "style":"table-header",
                            "border":[
                                true,
                                true,
                                true,
                                false
                              ]
                        }
                       
                    ]
                    ]
                 
                }
            },
            {
                "margin":[0,0,0,0],
                "table": {
                 
                    "widths":["11.11%","11.11%","11.11%","11.11%","11.11%","11.11%","11.11%","11.11%","11.11%"],
                    "body": [
                       "{{#account_statements}}[{{#.}}{\"text\":\"{{date}}\",\"style\": \"table-content\"},{\"text\":\"{{amount}}\",\"style\": \"table-content\"},{\"text\":\"{{typeP}}\",\"style\": \"table-content\"},{\"text\":\"{{typeR}}\",\"style\": \"table-content\"},{\"text\":\"{{remainingPrincipal}}\",\"style\": \"table-content\"},{\"text\":\"{{remainingInterest}}\",\"style\": \"table-content\"},{\"text\":\"{{dueAmount}}\",\"style\": \"table-content\"},{\"text\":\"{{remainingBalance}}\",\"style\": \"table-content\"},{\"text\":\"{{receiptNo}}\",\"style\": \"table-content\"}{{/.}}]{{/account_statements}}"
                    ]
                }
            }
        ],
        "styles": {
             
            "receipt-logo-header": {
                "color": "#484848",
                "fontSize": 14,
                "bold": true,
                "letterSpacing": 0.74,
                "margin": [
                  0,
                  0,
                  0,
                  5
                ]
              },
              "table-content": {
                "color": "#000000",
                "bold": false,
                "fontSize": 11,
                "fontWeight": 400,
                "margin": [
                  3,
                  0,
                  0,
                  0
                ]
              },
              "table-header": {
                "color": "#000000",
                "bold": true,
                "fontSize": 11,
                "fontWeight": 500,
                "margin": [
                  3,
                  0,
                  0,
                  0
                ]
              }

        }
    }
}