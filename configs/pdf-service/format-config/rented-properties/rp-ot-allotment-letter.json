{
    "key": "rp-ot-allotment-letter",
    "config": {
        "defaultStyle": {
            "font": "Cambay"
        },
        "content": [
            {
                "style": "noc-head",
                "table": {
                  "widths": [
                   50, "*"
                  ],
                  "body": [
                    [
                     {
                       "image": "{{logo}}",
                       "width": 50,
                       "margin": [12, 10, 10, 0]
                     },
                     {
                       "stack": [
                         {
                           "text": "{{header}}",
                           "style": "receipt-logo-header"
                         },
                         {
                           "text": "{{colony_branch}}",
                           "style": "receipt-logo-sub-header"
                         }
                       ],
                       "alignment": "center",
                         "margin": [
                           0,
                           12,
                           0,
                           0
                         ]
                     }
                    ]
                  ]
                },
                "layout": "noBorders"
              },
            {
                "margin": [0, 20, 0, 0],
                "text": "From",
                "alignment": "left",
                "style": "pdfContent"
            },
            {
                "margin": [50, 10, 0, 0],
                "stack": [{
                        "text": "The Additional Commissioner,",
                        "style": "pdfContent",
                        "width": "*"
                    },
                    {
                        "text": "Municipal Corporation,",
                        "style": "pdfContent",
                        "width": "*"
                    },
                    {
                        "text": "U.T., Chandigarh.",
                        "style": "pdfContent",
                        "width": "*"
                    }

                ]
            },
            {
                "text": "To",
                "alignment": "left",
                "style": "pdfContent"
            },
            {
                "margin": [50, 10, 0, 0],
                "stack": [{
                        "text": "{{name}}",
                        "style": "pdfContent",
                        "width": "*"
                    },
                    {
                        "text": "{{colony}}",
                        "style": "pdfContent",
                        "width": "*"
                    },
                    {
                        "text": "{{area}} , {{pincode}}",
                        "style": "pdfContent",
                        "width": "*"
                    },
                    {
                        "text": "Memo no/Allotment number  {{allotmenNumber}}",
                        "style": "pdfContent",
                        "width": "*"
                    },
                    {
                        "text": "Dated {{allotmentStartdate}}",
                        "style": "pdfContent",
                        "width": "*"
                    }

                ]
            },
            {
                "margin": [0, 10, 0, 0],
                "columns": [{
                        "text": "Subject:",
                        "style": "pdfContent",
                        "bold": true,
                        "width": "auto",
                        "alignment": "left"

                    },
                    {
                        "margin": [10, 0, 0, 0],
                        "width": "*",
                        "text": "Fresh licence of Transit Site No. {{transitNumber}} , {{colony}}, {{area}},{{pincode}} on the basis of intestate death.",
                        "style": "pdfContent",
                        "bold": true
                    }
                ]
            },
            {
                "margin": [50, 20, 0, 0],
                "style": "pdfContent",
                "text": "Reference your application on the subject cited above."
            },
            {
                "margin": [50, 0, 0, 0],
                "style": "pdfContent",
                "text": [{
                        "text": "Consequent upon the death of  "
                    },
                    {
                        "text": "{{fatherOrHusband}} ",
                        "bold":true
                    },
                    {
                        "text": "on "
                    },
                    {
                        "text": "{{dateOfDeathAllottee}} ",
                        "bold":true
                    },
                    {
                        "text": "the Death Certificate of which has been submitted by you alongwith Indemnity Bond and extract of newspapers dated "
                    },
                    {
                        "text": "i.e.____________________(Hindi),_________________(Punjabi), and______________"
                    },
                    {
                        "text": "(English), wherein public notice was published, the fresh licence of Transit Site No. "
                    },
                    {
                        "text":"{{transitNumber}}, ",
                        "bold":true
                    },
                    {
                        "text":"{{colony}} , {{area}}",
                        "bold":true
                    },
                    {
                        "text": " is hereby transferred in your name on the basis of intestate death of Shri/Smt. "
                    },
                    {
                        "text":"{{fatherOrHusband}} ","bold":true
                    },
                    {
                        "text":"subject to the following terms &amp; Conditions:-"
                    }
                ]
            },
            {
                "margin": [70, 0, 0, 0],
                "style": "pdfContent",
                "stack": [{
                        "text": "1. You shall abide by the provisions of Capital of Punjab (Development &amp; Regulation) Act, 1952 as amended upto date and the Rules framed there under from time to time and shall abide by the Terms &amp; Conditions as laid down in the  Allotment Letter and Deed of Conveyance."
                    },
                    {
                        "text": "2. You shall be liable to pay any amount in arrears, if found due towards the premium and interest etc. in respect of above mentioned site."
                    }
                ]
            },
            {
                "margin": [0, 20, 0, 0],
                "alignment": "right",
                "stack": [{
                        "text": "Additional Commissioner,",
                        "style": "pdfContent"
                    },
                    {
                        "text": "Municipal Corporation,",
                        "style": "pdfContent"
                    },
                    {
                        "text": "U.T., Chandigarh.",
                        "style": "pdfContent"
                    }

                ]
            },
            {
                "margin": [50, 20, 0, 0],
                "columns":[{
                    "text":"Endst. No.",
                    "style": "pdfContent",
                    "alignment":"left",
                    "width":"auto"
                },
            {
                "text":"",
                "width":"*"
            },
            {
                "text":"Dated ____________",
                "width":"auto",
                "style": "pdfContent",
                "alignment":"right"
            }] 
            },
            {
                "margin":[60,0,0,0],
                "style": "pdfContent",
                "text":"A Copy is forwarded to the following for information &amp; necessary action:-"
            },
            {
                "margin":[70,0,0,0],
                "stack":[{
                    "style": "pdfContent",
                    "text":"1. The Executive Engineer, Road Division No. ____, Municipal Corporation, Chandigarh."
                },
                {
                    "style": "pdfContent",
                    "text":"2. The Sub Divisional Engineer, Road Division No. ____, Municipal Corporation, Chandigarh."
                }]
            }


        ],
        "styles": {
            "pdfContent": {
                "color": "#000000",
                "bold": false,
                "fontSize": 11,
                "fontWeight": 400,
                "margin": [
                  3,
                  0,
                  0,
                  0
                ]
            },
            "receipt-logo-header": {
                "color": "#484848",
                "fontSize": 14,
                "bold": true,
                "letterSpacing": 0.74,
                "margin": [
                  0,
                  0,
                  0,
                  5
                ]
              },
              "receipt-logo-sub-header": {
                "color": "#484848",
                "fontFamily": "Roboto",
                "fontSize": 13,
                "letterSpacing": 1.6,
                "margin": [
                  0,
                  6,
                  0,
                  0
                ]
              },
              "noc-head": {
                "margin": [
                  -25,
                  -25,
                  0,
                  1
                ]
              }

        }
    }
} 